# Example environment variables for Backend

# Application
NODE_ENV=development
PORT=5000
APP_NAME=MigrateRight
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/migrateright
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/migrateright?retryWrites=true&w=majority

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_minimum_32_characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret_also_minimum_32_characters_required
JWT_REFRESH_EXPIRES_IN=30d

# JWT Security Best Practices:
# - Use strong random strings (min 32 chars) for secrets
# - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# - Never commit actual secrets to version control
# - Rotate secrets periodically in production
# - Use different secrets for access and refresh tokens

# Email Service (Gmail example)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@migrateright.bd
EMAIL_FROM_NAME=MigrateRight

# SMS Service (Twilio example)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Security
BCRYPT_SALT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_TIME=7200000
PASSWORD_RESET_EXPIRES=3600000

# Password Requirements (enforced in validation)
# - Minimum 8 characters
# - At least one uppercase letter
# - At least one lowercase letter
# - At least one number
# - At least one special character (recommended)

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000
# For production, use your frontend URL:
# CORS_ORIGIN=https://migrateright.bd

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/app.log

# Session (if using sessions)
SESSION_SECRET=your_session_secret
SESSION_EXPIRES_IN=86400000

# Google Maps (for backend geocoding)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Admin User (for initial setup)
ADMIN_EMAIL=admin@migrateright.bd
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_PHONE=+8801712345678
